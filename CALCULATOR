#include <iostream>
using namespace std;
 int main(){
     //calculator 
     cout<<"Enter your numbers"<<endl;
     
     int a;
     cout<<"First number: "<<endl;
     cin>>a;
     
     int b;
     cout<<"Second number: "<<endl;
     cin>>b;
     
    cout << "Which operation do you want to perform? \n1. + \n2. - \n3. * \n4. /" << endl;
    
    int choice;
    cin >> choice;
    
    
    if (choice == 1) {
        cout << "Result: " << a + b << endl;
    } else if (choice == 2) {
        cout << "Result: " << a - b << endl;
    } else if (choice == 3) {
        cout << "Result: " << a * b << endl;
    } else if (choice == 4) {
        if (b != 0) {
            cout << "Result: " << a / b << endl;
        } else {
            cout << "Error: Division by zero is not allowed." << endl;
        }
    } else {
        cout << "Invalid operation choice." << endl;
    }

    return 0;
 }
